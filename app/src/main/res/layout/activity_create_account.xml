<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roadtrippies.app.roadtrippies.CreateAccountActivity">

    <EditText
        android:id="@+id/userEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_above="@+id/userPasswordTV"
        android:layout_alignLeft="@+id/userNameTV"
        android:layout_alignStart="@+id/userNameTV" />

    <EditText
        android:id="@+id/userNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userEmailTV"
        android:layout_alignLeft="@+id/userPasswordTV"
        android:layout_alignStart="@+id/userPasswordTV"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text|textEmailAddress"
        android:singleLine="false"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="29dp" />

    <EditText
        android:id="@+id/userPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_above="@+id/btn_create"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="248dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="214dp" />

</RelativeLayout>
